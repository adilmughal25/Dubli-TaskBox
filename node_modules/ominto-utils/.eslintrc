{
  "rules": {
    // best practices and potential bugs
    "strict": [2, "global"],
    "default-case": 2,
    "no-lone-blocks": 2,
    "no-throw-literal": 2,
    "no-self-compare": 2,
    "radix": 2,

    // use a logger if possible!! otherwise no cloudwatch/elasticsearch
    "no-console": 1,

    // stylistic warnings
    "eol-last": 1,
    "linebreak-style": [1, "unix"],
    "semi": [1, "always"],
    "no-extra-semi": 1,
    "semi-spacing": [1, { "before": false, "after": true }],
    "no-extra-parens": 1,
    "brace-style": [1, "1tbs", { "allowSingleLine": true }],
    "comma-spacing": [1, {"before": false, "after": true}],
    "no-multiple-empty-lines": [1, {"max": 2}],
    "no-trailing-spaces": 1,
    "valid-jsdoc": 1,
    "standard/object-curly-even-spacing": [1, "either"],
    "standard/array-bracket-even-spacing": [1, "either"],
    "standard/computed-property-even-spacing": [1, "even"]
  },
  "env": {
    "browser": false,
    "es6": true,
    "node": true
  },
  "plugins": ["standard"],
  "extends": "eslint:recommended",
  "globals": {
    "configs": false
  }
}